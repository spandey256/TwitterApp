<!DOCTYPE html>
<html>
<head>
  <title>Twitter</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>



<% if user_signed_in? %>
    <h1>Welcome</h1>
    <div>
      <a href="<%= home_index_path %>">Home</a>
      <a href="<%= notification_index_path %>">Notifications</a>
      <a href="<%= connection_index_path %>">Connections</a>
      <span>Welcome</span>
      <a href="<%= profile_index_path %>?user_id=<%= current_user.id %>"><%= current_user.email %></a>
      <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
    </div>
<% end %>

<%= yield %>

</body>
</html>
